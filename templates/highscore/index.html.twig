{% include 'incl/header.html.twig' %}
<div class="container main-content">
    <div class="row">
        <h1> Highscore för yatzy </h1>
    </div>
    <div class="row">
        <div class="col-md-3">
            <table class="table table-dark table-striped caption-top">
                <caption> top 10 </caption>
                <tr class="highscore">
                    <th>Namn</th>
                    <th>Poäng</th>
                    <th>Datum</th>
                </tr>
                {% for highscore in highscores %}
                    <tr  class="highscore">
                        <td>{{ highscore.name }}</td>
                        <td>{{ highscore.score }}</td>
                        <td>{{ date(highscore.date).format('d-M-Y') }}</td>
                    </tr>
            {% endfor %}
            </table>
        </div>
    </div>
    <div class="row">
    </div>
</div>
